{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@features/*": ["src/features/*"],
      "@core/*": ["src/core/*"]
    },
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "prisma/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules", "uploads"],
  "assets": ["**/*.hbs"]
}
